<h1>Editihing Book</h1>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <ul><%= message %></ul>
  <% end %>

</div>
<% end %>

<%= form_with model: @book, url: "/books/#{@book.id}", local: true do |f| %>
<div class="field">
    <label for="book_title"></label>
    <%= f.text_field :title %>
</div>
<div class="field">
    <label for="book_body">body</label>
    <%= f.text_area :body %>
</div>
    <div class="actions">
        <%= f.submit 'Update Book' %>
    </div>
<span>
    <%=link_to "show", book_path(@book) %>
    <%= link_to "back", books_path %>
</span>
<% end %>
