<p id="notice"><%= flash[:notice] %></p>

<h1>Books</h1>

<table>

  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
     <td><%= book.title %></td>
     <td><%= book.body %></td>

     <td><%= link_to "show", book_path(book.id) %>
     <%= link_to "edit", edit_book_path(book.id) %>
     <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" =>"本当に削除しますか？" %></td>
     </tr>
     <% end %>
  </tbody>

</table>


<h2>New book</h2>
  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %> error prohibited this book from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
      <ul><%= message %></ul>
  <% end %>

</div>
<% end %>
<%= form_with model: @book, local: true do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
</div>
  <div class="field">
   <label for="book_body">Body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>




